<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/custom_lab_title">

    <!-- Our logo -->
    <com.android.settingslib.widget.LayoutPreference
        android:key="electrolab"
        android:layout="@layout/electrolab_logo"
        android:selectable="false"/>

    <Preference
     	android:key="statusbar_battery"
        android:title="@string/battery_percent_title"
        android:summary="@string/battery_percent_summary"
        android:fragment="com.android.settings.fuelgauge.StatusBarBatterySettings"/>

    <com.android.settings.custom.preference.SecureSettingSwitchPreference
        android:key="status_bar_quick_qs_pulldown"
        android:title="@string/quick_settings_quick_pull_down_title"
        android:summary="@string/quick_settings_quick_pull_down_summary"
        android:defaultValue="false" />

    <com.android.settings.custom.preference.SecureSettingSwitchPreference
        android:key="qs_show_data_usage"
        android:title="@string/qs_show_data_usage_title"
        android:summary="@string/qs_show_data_usage_summary"
        android:defaultValue="false" />

    <com.android.settings.custom.preference.SystemSettingSwitchPreference
        android:key="show_fourg_icon"
        android:title="@string/show_fourg_icon_title"
        android:summary="@string/show_fourg_icon_summary"
        android:defaultValue="true"/>

    <com.android.settings.custom.preference.GlobalSettingSwitchPreference
        android:order="92"
        android:key="window_ignore_secure"
        android:title="@string/ignore_window_secure_title"
        android:summary="@string/ignore_window_secure_summary"
        android:defaultValue="false"/>

    <com.android.settings.custom.preference.SystemSettingSwitchPreference
        android:key="statusbar_colored_icons"
        android:title="@string/statusbar_colored_icons_title"
        android:summary="@string/statusbar_colored_icons_summary"
        android:defaultValue="false" />

    <com.android.settings.custom.preference.SystemSettingSwitchPreference
        android:key="statusbar_notif_count"
        android:title="@string/status_bar_notif_count_title"
        android:summary="@string/status_bar_notif_count_summary"
        android:defaultValue="false" />

    <PreferenceCategory
        android:title="@string/status_bar_clock_title">

        <com.android.settings.custom.preference.SystemSettingListPreference
            android:key="status_bar_clock"
            android:title="@string/status_bar_clock_position_title"
            android:summary="%s"
            android:dialogTitle="@string/status_bar_clock_position_title"
            android:entries="@array/status_bar_clock_position_entries"
            android:entryValues="@array/status_bar_clock_position_values"
            android:defaultValue="2" />

        <Preference
            android:key="clock"
            android:title="@string/status_bar_clock_title"
            android:summary="@string/status_bar_clock_summary"
            android:fragment="com.android.settings.custom.fragments.Clock" />

        <com.android.settings.custom.preference.SystemSettingSwitchPreference
            android:key="statusbar_clock_chip"
            android:title="@string/statusbar_clock_chip_title"
            android:summary="@string/statusbar_clock_chip_summary"
            android:defaultValue="true" />
    </PreferenceCategory>

    <com.android.settingslib.widget.FooterPreference
        android:title="@string/custom_lab_footer"
        android:selectable="false"
        settings:searchable="false"/>
</PreferenceScreen>
